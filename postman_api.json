{
  "info": {
    "name": "MasihMeeting Auth API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"testuser@mail.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["auth", "register"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@mail.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "Get Profile",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:5000/auth/profile",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["auth", "profile"]
        }
      }
    },
    {
      "name": "Email Verification",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/auth/verify/{{token}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["auth", "verify", "{{token}}"]
        }
      }
    },
    {
      "name": "Google OAuth (Manual Test)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/auth/google",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["auth", "google"]
        }
      }
    }
  ]
}
